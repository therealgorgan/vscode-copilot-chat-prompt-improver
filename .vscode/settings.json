// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false, // set this to true to hide the "out" folder with the compiled JS files
        "dist": false // set this to true to hide the "dist" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true, // set this to false to include "out" folder in search results
        "dist": true // set this to false to include "dist" folder in search results
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",
    "promptImprover.systemPrompt": "You are an expert at improving coding prompts efficiently.\n\nTransform the user's prompt by:\n1. Making requirements more specific and measurable\n2. Adding essential technical details (types, error handling, validation)\n3. Clarifying expected output format\n4. Keeping it focused and actionable\n\nReturn ONLY the improved prompt text - be thorough but concise.",
    // Disable experimental workspace tools due to VS Code bug
    "promptImprover.useWorkspaceTools": false
}